  <div class="ui top attached menu" id="topbar">
    <div class="header item">
      <i class="spotify large icon"/> ember-spotify
    </div>
    <div class="right menu">

      <div class="item">
        <img class="ui avatar image" src="{{session.currentUser.avatar}}">
        {{session.currentUser.displayName}}
      </div>

    </div>
  </div>
  <div class="ui attached segment" id="content">
    <div class="ui divided grid">
      <div class="four wide column">

        <div class="ui fluid vertical text menu">
          {{#each user.playlists as |playlist|}}
            {{link-to playlist.name 'playlist' playlist.owner.id playlist.id class='item'}}
          {{/each}}
        </div>

      </div>
      <div class="twelve wide column">

        {{outlet}}

      </div>
    </div>
  </div>
  <div class="ui bottom attached segment" id="playbar">
    <div class="ui form">
      <div class="inline fields">

        <div class="field">
          <button class="ui mini icon button">
            <i class="play icon"/>
          </button>
        </div>

        <div class="field">
          <em>Nothing playing right now</em>
        </div>

      </div>
    </div>
  </div>
